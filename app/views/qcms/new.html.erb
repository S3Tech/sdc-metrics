<h2><center>Create New QCM</center></h2>

<%= form_for Qcm.new do |f| %>
  <div class="row">
      <div class="col-md-2">
        First name
      </div>
      <div class="col-md-10">
        <%= f.text_field :first_name, class: 'form-control agent_form_width' %>
      </div>
    </div>
    <div class="top20"></div>
    <div class="row">
      <div class="col-md-2">
        Last name
      </div>
      <div class="col-md-10">
        <%= f.text_field :last_name, class: 'form-control agent_form_width' %>
      </div>
    </div>
    <%= f.hidden_field :status, value: 'active' %>
    <div class="top20"></div>
    <%= f.submit 'Submit', class: 'btn btn-sm btn-primary' %>
<% end %>